                @Html.EditorFor(model => model.detail_articul, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.detail_articul, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.year_release, htmlAttributes: new { @class = "control-label col-md-2" })
